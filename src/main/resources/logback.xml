<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>
				%highlight(%d{ISO8601}) %red(%-5level) %yellow([%c{1}:%L]) %msg%n%throwable
			</Pattern>
		</encoder>
	</appender>

	<appender name="STACKIFY" class="com.stackify.log.logback.StackifyLogAppender">
		<apiKey></apiKey>
		<application>STACKIFYBOOT</application>
		<environment>dev</environment>
	</appender>

	<root level="info">
		<appender-ref ref="STACKIFY" />
		<appender-ref ref="Console" />
	</root>
	
	<logger name="com.stackify" level="info"/>
</configuration>